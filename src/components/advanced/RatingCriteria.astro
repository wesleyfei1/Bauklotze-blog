---
const { lang = 'zh' } = Astro.props

// 评分准则数据
const criteria = {
  zh: {
    title: '评分准则',
    levels: [
      { star: 1, desc: '平平无奇的论文' },
      { star: 2, desc: '正常的论文' },
      { star: 3, desc: '广受认可或者让我眼前一亮的论文' },
      { star: 4, desc: '奠基性的论文或者我非常喜欢的论文' },
      { star: 5, desc: '毋庸置疑的最棒的论文' }
    ]
  },
  en: {
    title: 'Rating Criteria',
    levels: [
      { star: 1, desc: 'Mediocre paper' },
      { star: 2, desc: 'Regular paper' },
      { star: 3, desc: 'Widely recognized or eye-catching paper' },
      { star: 4, desc: 'Foundational paper or one I really love' },
      { star: 5, desc: 'Undoubtedly the best paper' }
    ]
  }
} as const

type Lang = 'zh' | 'en'
const currentCriteria = criteria[lang as Lang] || criteria.zh
---

<div class='rounded-xl border p-4'>
  <div class='inline-flex items-stretch gap-2 rounded-full border mb-4'>
    <span
      class='flex shrink-0 items-center rounded-full bg-primary-foreground px-2.5 text-sm text-primary'
    >
      {currentCriteria.title}
    </span>
  </div>
  
  <div class='space-y-3'>
    {
      currentCriteria.levels.map((level: { star: number; desc: string }) => (
        <div class='flex items-center gap-x-3 p-2 rounded-lg hover:bg-muted/50 transition-colors'>
          <div class='inline-flex items-center gap-x-1'>
            {
              // 渲染星星
              Array.from({ length: level.star }, (_, i) => (
                <svg 
                  xmlns='http://www.w3.org/2000/svg' 
                  width='18' 
                  height='18' 
                  viewBox='0 0 24 24'
                  class='text-yellow-500'
                  data-star={i}
                >
                  <g fill='none' fill-rule='evenodd'>
                    <path d='m12.593 23.258l-.011.002l-.071.035l-.02.004l-.014-.004l-.071-.035q-.016-.005-.024.005l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427q-.004-.016-.017-.018m.265-.113l-.013.002l-.185.093l-.01.01l-.003.011l.018.43l.005.012l.008.007l.201.093q.019.005.029-.008l.004-.014l-.034-.614q-.005-.018-.02-.022m-.715.002a.02.02 0 0 0-.027.006l-.006.014l-.034.614q.001.018.017.024l.015-.002l.201-.093l.01-.008l.004-.011l.017-.43l-.003-.012l-.01-.01z' />
                    <path
                      fill='currentColor'
                      d='M10.92 2.868a1.25 1.25 0 0 1 2.16 0l2.795 4.798l5.428 1.176a1.25 1.25 0 0 1 .667 2.054l-3.7 4.141l.56 5.525a1.25 1.25 0 0 1-1.748 1.27L12 19.592l-5.082 2.24a1.25 1.25 0 0 1-1.748-1.27l.56-5.525l-3.7-4.14a1.25 1.25 0 0 1 .667-2.055l5.428-1.176zM12 4.987L9.687 8.959a1.25 1.25 0 0 1-.816.592l-4.492.973l3.062 3.427c.234.262.347.61.312.959l-.463 4.573l4.206-1.854a1.25 1.25 0 0 1 1.008 0l4.206 1.854l-.463-4.573a1.25 1.25 0 0 1 .311-.959l3.063-3.427l-4.492-.973a1.25 1.25 0 0 1-.816-.592z'
                    />
                  </g>
                </svg>
              ))
            }
            {
              // 渲染空星星
              Array.from({ length: 5 - level.star }, (_, i) => (
                <svg 
                  xmlns='http://www.w3.org/2000/svg' 
                  width='18' 
                  height='18' 
                  viewBox='0 0 24 24'
                  class='text-gray-300'
                  data-empty-star={i + level.star}
                >
                  <g fill='none' fill-rule='evenodd'>
                    <path d='m12.593 23.258l-.011.002l-.071.035l-.02.004l-.014-.004l-.071-.035q-.016-.005-.024.005l-.004.01l-.017.428l.005.02l.01.013l.104.074l.015.004l.012-.004l.104-.074l.012-.016l.004-.017l-.017-.427q-.004-.016-.017-.018m.265-.113l-.013.002l-.185.093l-.01.01l-.003.011l.018.43l.005.012l.008.007l.201.093q.019.005.029-.008l.004-.014l-.034-.614q-.005-.018-.02-.022m-.715.002a.02.02 0 0 0-.027.006l-.006.014l-.034.614q.001.018.017.024l.015-.002l.201-.093l.01-.008l.004-.011l.017-.43l-.003-.012l-.01-.01z' />
                    <path
                      fill='currentColor'
                      d='M10.92 2.868a1.25 1.25 0 0 1 2.16 0l2.795 4.798l5.428 1.176a1.25 1.25 0 0 1 .667 2.054l-3.7 4.141l.56 5.525a1.25 1.25 0 0 1-1.748 1.27L12 19.592l-5.082 2.24a1.25 1.25 0 0 1-1.748-1.27l.56-5.525l-3.7-4.14a1.25 1.25 0 0 1 .667-2.055l5.428-1.176zM12 4.987L9.687 8.959a1.25 1.25 0 0 1-.816.592l-4.492.973l3.062 3.427c.234.262.347.61.312.959l-.463 4.573l4.206-1.854a1.25 1.25 0 0 1 1.008 0l4.206 1.854l-.463-4.573a1.25 1.25 0 0 1 .311-.959l3.063-3.427l-4.492-.973a1.25 1.25 0 0 1-.816-.592z'
                    />
                  </g>
                </svg>
              ))
            }
          </div>
          <span class='text-sm text-foreground flex-1'>{level.desc}</span>
        </div>
      ))
    }
  </div>
</div>
